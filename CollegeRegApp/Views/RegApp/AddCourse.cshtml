@model University.Courses.Course

@{
    ViewBag.Title = "Add a Course";
}

<div> 
    <h3><u>Add a Course</u></h3>
</div>

<div>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary()
        <div>Name of Course: @Html.TextBoxFor(x => x.Title, new { @placeholder = "i.e. Artificial Intelligence" })</div>
        <div>
            Credit Hours:
            @Html.EnumDropDownListFor(x => x.CreditHours)
        </div>

        <div>
            Starting Time:
            
        </div>
        
        <div>
            <input type="submit" value="Submit Order" />
        </div>

    }
</div>


